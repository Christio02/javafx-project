<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airlinemanager.AirlineController">
   <left>
      <ListView fx:id="listOfFlights" prefHeight="328.0" prefWidth="391.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      
      <Label fx:id="header1" text="Welcome to Orwegian!" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
   <right>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="readFileContent" layoutX="-1.0" layoutY="58.0" prefHeight="110.0" prefWidth="435.0" />
         </children>
      </AnchorPane>
   </right>
   <bottom>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button alignment="CENTER" layoutX="363.0" layoutY="133.0" mnemonicParsing="false" onAction="#bookFlight" prefHeight="30.0" prefWidth="100.0" stylesheets="@style.css" text="Book flight" />
            <Button fx:id="cancelBooking" layoutX="479.0" layoutY="133.0" mnemonicParsing="false" onAction="#removeBooking" stylesheets="@style.css" text="Remove Booking" />
            <DatePicker fx:id="datePicker" layoutX="323.0" layoutY="88.0" promptText="Enter a date..." />
            <Button fx:id="download" layoutX="690.0" layoutY="150.0" mnemonicParsing="false" onAction="#download" stylesheets="@style.css" text="Download" />
            <TextField fx:id="searchbar" layoutX="638.0" layoutY="75.0" promptText="Filter flights..." />
            <Button fx:id="searchbutton" layoutX="662.0" layoutY="107.0" mnemonicParsing="false" onAction="#searchForFlight" stylesheets="@style.css" text="Search" />
            <Button fx:id="getBooking" layoutX="329.0" layoutY="39.0" mnemonicParsing="false" onAction="#getBooking" stylesheets="@style.css" text="Click for current booking" />
            <ListView fx:id="bookedFlights" layoutX="2.0" layoutY="65.0" prefHeight="98.0" prefWidth="276.0" />
            <Text fx:id="yourbookingstext" layoutX="14.0" layoutY="45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Your bookings">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Button fx:id="resetbutton" layoutX="742.0" layoutY="107.0" mnemonicParsing="false" onAction="#reset" stylesheets="@style.css" text="Reset" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
