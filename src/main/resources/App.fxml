<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airlinemanager.AirlineController">
   <left>
      <ListView fx:id="listOfFlights" prefHeight="328.0" prefWidth="391.0" BorderPane.alignment="CENTER" />
   </left>
   <top>
      
      <Label fx:id="header1" text="Welcome to Orwegian!" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
   <right>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="getBooking" mnemonicParsing="false" onAction="#getBooking" text="Click for current booking" />
            <Label fx:id="readFileContent" layoutX="-1.0" layoutY="58.0" prefHeight="110.0" prefWidth="435.0" />
         </children>
      </AnchorPane>
   </right>
   <bottom>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button alignment="CENTER" layoutX="127.0" layoutY="133.0" mnemonicParsing="false" onAction="#bookFlight" prefHeight="30.0" prefWidth="100.0" stylesheets="@style.css" text="Book flight" />
            <Button fx:id="cancelBooking" layoutX="569.0" layoutY="139.0" mnemonicParsing="false" onAction="#removeBooking" text="Remove Booking" />
            <DatePicker fx:id="datePicker" layoutX="320.0" layoutY="139.0" promptText="Enter a date..." />
            <Button fx:id="download" layoutX="718.0" layoutY="139.0" mnemonicParsing="false" onAction="#download" text="Download" />
            <TextField fx:id="searchbar" layoutX="569.0" layoutY="88.0" promptText="Filter flights..." />
            <Button fx:id="searchbutton" layoutX="735.0" layoutY="87.0" mnemonicParsing="false" onAction="#searchForFlight" text="Search" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
